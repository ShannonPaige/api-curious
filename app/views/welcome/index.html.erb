<div class="container-fluid">
  <% if current_user %>

    <div class="row">
      <div class="col-md-3"><%= current_user.name %>
        <%= render partial: 'shared/profile' %>
        </div>
      <div class="col-md-9"><%= render partial: 'shared/tweet_deck' %><%= render partial: 'shared/twitter_feed' %></div>
    </div>

  <% else %>
    <div class="jumbotron">
      <%= link_to "#{image_tag("http://i.imgur.com/7Jq3pi2.jpg")}".html_safe, login_path %>
    </div>
  <% end %>
</div>
