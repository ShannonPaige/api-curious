<h1>Welcome!</h1>

<div style = "margin-bottom: 10px">
  <% if current_user %>
    <p>Hello, <%= current_user.name %></p>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login With Twitter", login_path %>
  <% end %>
</div>

<% if current_user %>
  <div style = "margin-bottom: 10px">
  <p>
    Username: @<%= current_user.screen_name %>
  </p>
  <p>
    Tweets: <%= @twitter_service.get_tweets_count %>
  </p>
  <p>
    Followers: <%= @twitter_service.get_followers_count %>
  </p>
  <p>
    Following: <%= @twitter_service.get_following_count %>
  </p>
  </div>

  <div>
  <p>
    Feed:<br />
    <% @twitter_service.get_timeline.each do |tweet| %>
          <strong><%= tweet.user.name %></strong>
            <span class="username">@<b><%= tweet.user.screen_name %></b></span>
            <p><%= tweet.full_text %></p>

            <div>
              <span>Retweets: <%= tweet.retweet_count %></span>
            </div>
            <div>
              <span><%= link_to "Likes", favorite_path(tweet.id), method: :patch %>: <%= tweet.favorite_count %> </span>
          </div><br /><br />
    <% end %>
  </p>
  </div>
<% end %>
