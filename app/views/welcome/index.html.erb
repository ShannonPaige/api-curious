<h1>Welcome!</h1>

<div style = "margin-bottom: 10px">
  <% if current_user %>
    <p>Hello, <%= current_user.name %></p>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login With Twitter", login_path %>
  <% end %>
</div>

<% if current_user %>
  <%= render partial: 'shared/profile' %>
  <%= render partial: 'shared/tweet_deck' %>
  <%= render partial: 'shared/twitter_feed' %>
<% end %>
