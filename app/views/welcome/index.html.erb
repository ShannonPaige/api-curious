<h1>Welcome!</h1>

<div style = "margin-bottom: 10px">
  <% if current_user %>
    <p>Hello, <%= current_user.name %></p>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login With Twitter", login_path %>
  <% end %>
</div>

<% if current_user %>
  <div>
  <p>
    Username: @<%= current_user.screen_name %>
  </p>
  <p>
    Tweets:
  </p>
  <p>
    Followers:
  </p>
  <p>
    Following:
  </p>
  </div>

  <div>
  <p>
    Feed:
  </p>
  </div>
<% end %>
